@model ProductManagementSystem.Models.Product

@{
    ViewData["Title"] = "Xác nhận xóa sản phẩm";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white text-center">
            <h3><i class="bi bi-exclamation-triangle"></i> Xác nhận xóa sản phẩm</h3>
        </div>

        <div class="card-body">
            <p class="text-center fs-5 text-muted mb-4">
                Bạn có chắc chắn muốn <strong class="text-danger">xóa</strong> sản phẩm này không? 
                Hành động này <u>không thể hoàn tác</u>.
            </p>

            <dl class="row">
                <dt class="col-sm-3 fw-bold">Tên sản phẩm</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3 fw-bold">Giá</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Price) VNĐ</dd>

                <dt class="col-sm-3 fw-bold">Số lượng tồn</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Stock)</dd>

                <dt class="col-sm-3 fw-bold">Mô tả</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
            </dl>

            <form asp-action="Delete" method="post" class="text-center mt-4">
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-danger px-4 me-2">
                    <i class="bi bi-trash"></i> Xóa sản phẩm
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="bi bi-arrow-left"></i> Quay lại danh sách
                </a>
            </form>
        </div>
    </div>
</div>
