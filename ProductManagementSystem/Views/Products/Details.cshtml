@model ProductManagementSystem.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4 py-3">
            <h2 class="mb-0"><i class="bi bi-box-seam"></i> Chi tiết sản phẩm</h2>
        </div>

        <div class="card-body px-5 py-4">
            <h5 class="text-muted mb-4 text-center">Thông tin chi tiết</h5>

            <dl class="row fs-5">
                <dt class="col-sm-4 text-end fw-bold">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-4 text-end fw-bold">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-8 text-success fw-semibold">
                    @Html.DisplayFor(model => model.Price) ₫
                </dd>

                <dt class="col-sm-4 text-end fw-bold">
                    @Html.DisplayNameFor(model => model.Stock)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Stock)
                </dd>

                <dt class="col-sm-4 text-end fw-bold">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
        </div>

        <div class="card-footer bg-light text-center py-3 rounded-bottom-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                <i class="bi bi-pencil-square"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
